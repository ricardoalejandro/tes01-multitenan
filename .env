# ==================================
# VARIABLES DE ENTORNO - DOCKER COMPOSE
# ==================================
# Este archivo es leído por docker-compose.yml
# Para entornos de producción/staging, modifica estos valores

# ==================================
# SEGURIDAD
# ==================================
# JWT Secret - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024

# ==================================
# BASE DE DATOS (PostgreSQL)
# ==================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=multitenant_db

# ==================================
# BACKEND API
# ==================================
NODE_ENV=production
BACKEND_PORT=3000
CORS_ORIGIN=https://naperu.cloud

# ==================================
# FRONTEND
# ==================================
FRONTEND_PORT=5000
NEXT_PUBLIC_API_URL=https://naperu.cloud/api

# ==================================
# REDIS
# ==================================
REDIS_PORT=6379

# ==================================
# NETWORK
# ==================================
# Estos puertos se exponen al host
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
BACKEND_EXTERNAL_PORT=3000
FRONTEND_EXTERNAL_PORT=5000
